@model CRM.Application.Lead.Commands.Delete.DeleteLeadCommand

<!-- Button trigger modal -->
<button type="button" class="btn btn-outline-dark" style="margin-top: 30px;" data-bs-toggle="modal" data-bs-target="#deleteLeadModal">
    Delete this lead
</button>

<!-- Modal -->
<div class="modal fade" id="deleteLeadModal" tabindex="-1" aria-labelledby="deleteLeadModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="DeleteLead" asp-route-encodedName="@Model.LeadEncodedName">

                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="deleteLeadModalLabel">Are you sure you want to delete this lead?</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <input asp-for="LeadEncodedName" class="form-control" type="hidden" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <input type="submit" value="Delete" class="btn btn-outline-dark" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}