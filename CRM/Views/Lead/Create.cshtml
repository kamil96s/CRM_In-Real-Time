@using CRM.Application.Lead;
@using CRM.Application.Lead.Commands.Create;


@model CreateLeadCommand
<h3>Creating a lead</h3>

<hr />

<div class="row">
    <div class="col-md-4">
        <form action="/Lead/Create" method="post">
            <div class="form-group mb-3">
                <label class="control-label" asp-for="Name">Name</label>
                <input class="form-control" type="text" asp-for="Name">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label class="control-label" asp-for="PhoneNumber">Phone Number</label>
                <input class="form-control" type="text" asp-for="PhoneNumber">
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label class="control-label" asp-for="Mail">E-mail</label>
                <input class="form-control" type="text" asp-for="Mail">
                <span asp-validation-for="Mail" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <input type="submit" value="Confirm" class="btn btn-primary">

                <a class="btn btn-outline-dark" asp-action="Index">Cancel</a>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}