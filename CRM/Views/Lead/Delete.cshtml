@model CRM.Application.Lead.Commands.Edit.EditLeadCommand

@{
    ViewData["Title"] = "Edit";
}

<h3>Editing lead - @Model.Name</h3>

<hr/>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Delete" asp-route-encodedName="@Model.EncodedName">

        <div class="modal-header">
            <h1 class="modal-title fs-5" id="deleteLeadModalLabel">Are you sure you want to delete this lead?</h1>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input asp-for="EncodedName" class="form-control" type="hidden"/>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            <input type="submit" value="Save" class="btn btn-primary" style="margin-top: 30px;"/>
            <input type="submit" value="Delete" class="btn btn-outline-dark"/>

        </div>
        <a asp-action="Index" class="btn btn-secondary" style="margin-top: 30px;">Back to List</a>
    </form>
</div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/js/CRM/Edit.js"></script>
    <script src="~/js/CRM/DeleteService.js"></script>
}