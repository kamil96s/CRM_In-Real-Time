@model IEnumerable<CRM.Application.Lead.LeadDto>

@{
    ViewData["Title"] = "MyOpportunities";
}

<br>

<h4>Below - leads coordinated by the currently logged in employee</h4>

<br>

<table class="table">
    <thead class ="custom-thead">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                Phone Number
            </th>
            <th>
                E-mail
            </th>
            <th style="font-weight: bold;">
                My opportunities
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Reverse())
        {
            @if (item.IsEditable)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.PhoneNumber)</td>
                <td>@Html.DisplayFor(modelItem => item.Mail)</td>
                <td style="padding-left: 70px;">@Html.DisplayFor(modelItem => item.IsEditable)</td>
                <td style="padding: 10px;">
                        <button type="button" class="btn btn-primary btn-sm" style="height: 30px; padding: 0 10px;" onclick="location.href='/Lead/@item.EncodedName/Info'">Info</button>
                </td>
            </tr>
            }
        }
    </tbody>
</table>
