@model CRM.Application.CRMService.Commands.DeleteCRMServiceCommand

<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#deleteCRMServiceModal">
    Delete all conditions
</button>

<!-- Modal -->
<div class="modal fade" id="deleteCRMServiceModal" tabindex="-1" aria-labelledby="deleteCRMServiceModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="DeleteCRMService" asp-route-id="@Model.EncodedName" method="post">

                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="deleteCRMServiceModalLabel">Are you sure you want to delete?</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <input asp-for="CRMEncodedName" class="form-control" type="hidden" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <input type="submit" value="Delete" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}