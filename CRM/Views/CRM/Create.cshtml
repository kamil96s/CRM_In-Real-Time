@using CRM.Application.CRM;
@using CRM.Application.CRM.Commands.CreateCRM;


@model CreateCRMCommand
<h3>Creating a customer profile</h3>

<hr />

<div class="row">
    <div class="col-md-4">
        <form action="/CRM/Create" method="post">
            <div class="form-group mb-3">
                <label class="control-label" asp-for="Name">Name</label>
                <input class="form-control" type="text" asp-for="Name">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label class="control-label" asp-for="Street">Street</label>
                <input class="form-control" type="text" asp-for="Street">
                <span asp-validation-for="Street" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label class="control-label" asp-for="City">City</label>
                <input class="form-control" type="text" asp-for="City">
                <span asp-validation-for="City" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label class="control-label" asp-for="PostalCode">Postal Code</label>
                <input class="form-control" type="text" asp-for="PostalCode">
                <span asp-validation-for="PostalCode" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label class="control-label" asp-for="PhoneNumber">Phone Number</label>
                <input class="form-control" type="text" asp-for="PhoneNumber">
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label class="control-label" asp-for="Mail">E-mail</label>
                <input class="form-control" type="text" asp-for="Mail">
                <span asp-validation-for="Mail" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label class="control-label" asp-for="About">Tax Number</label>
                <input class="form-control" type="text" asp-for="About">
                <span asp-validation-for="About" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label class="control-label" asp-for="LegalForm">Legal Form</label>
                <input class="form-control" type="text" asp-for="LegalForm">
                <span asp-validation-for="LegalForm" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <input type="submit" value="Confirm" class="btn btn-primary">

                <a class="btn btn-outline-dark" asp-action="Index">Cancel</a>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}