@model CRM.Application.CRM.CRMDto

@{
    ViewData["Title"] = "Details";
}

<h3>Details about acquired customer - @Model.Name</h3>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Street)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Street)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.City)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.City)
        </dd>
        <dt class="col-sm-2">
            Postal Code
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PostalCode)
        </dd>
        <dt class="col-sm-2">
            Phone Number
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>
        <dt class="col-sm-2">
            E-mail
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Mail)
        </dd>
        <dt class="col-sm-2">
            Tax Number
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.About)
        </dd>
        <dt class="col-sm-2">
            Legal Form
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LegalForm)
        </dd>

    </dl>
</div>

<hr />
<h3 style="margin-bottom: 20px;">Departments - Contact Phone</h3>

<div id="services" class="row" data-encoded-name="@Model.EncodedName"></div>

<div>
    @if (Model.IsEditable)
    {
        <a class="btn btn-primary" style="margin-top: 20px;" asp-controller="CRM" asp-action="Edit" asp-route-encodedName="@Model.EncodedName">Edit</a>
    }
    <a class="btn btn-secondary" style="margin-top: 20px;" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <script src="~/js/site.js"></script>
    <script src="~/js/CRM/Details.js"></script>
    <script src="~/js/CRM/DeleteService.js"></script>
}
